{
    "name": "@methodus/contracts",
    "version": "5.0.14",
    "description": "",
    "main": "build/index.js",
    "bin": {
        "contracts-server": "build/build.js",
        "contracts-client": "build/client.js"
    },
    "scripts": {
        "build": "rimraf build && tsc",
        "tslint": "tslint --project",
        "test": "npm run check-coverage",
        "check-coverage": "npm run test:tests",
        "test:tests": "rimraf output && alsatian build/tests/*.spec.js",
        "test:server": "run-s test:server:* ",
        "test:server:simple": "node build/build.js ./build_vars/simple/build.json",
        "test:server:models": "node build/build.js ./build_vars/models/build.json",
        "test:server:inherit": "node build/build.js ./build_vars/inherit/build.json",
        "test:server:consumer:simple": "node build_consumers/server/simple/index.js",
        "test:client": "run-s test:client:*",
        "test:client:simple": "node build/client.js ./build_vars/simple/build.json",
        "test:client:models": "node build/client.js ./build_vars/models/build.json",
        "test:client:inherit": "node build/client.js ./build_vars/inherit/build.json",
        "pretest": "tsc",
        "sonar": "sonar-scanner.bat -Dsonar.projectKey=nodulusteam_-methodus-contracts -Dsonar.organization=nodulusteam-github -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=e01e7adc2647251c0651a3bab28de27b479b4432"
    },
    "author": "@nodulusteam",
    "license": "BSD-3-Clause",
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "extension": [
            ".ts",
            ".js"
        ],
        "all": true,
        "include": [
            "build/**/*.js",
            "src/**/*.ts"
        ],
        "report-dir": "output/coverage",
        "temp-dir": "output/temp",
        "check-coverage": false
    },
    "devDependencies": {
        "@methodus/client": "^3.1.0",
        "@methodus/server": "^4.0.0",
        "@types/lodash": "^4.14.75",
        "@types/node": "^8.0.31",
        "alsatian": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "nyc": "^14.1.1",
        "tslint": "^5.12.0",
        "typescript": "^3.6.3"
    },
    "dependencies": {
        "@methodus/data": "^2.0.21",
        "colors": "^1.1.2",
        "jsdoc-regex": "^1.0.1",
        "logelas": "^4.1.3",
        "rimraf": "^3.0.0",
        "shelljs": "^0.7.8",
        "shelljs.exec": "^1.1.8",
        "ts-morph": "^4.0.0"
    }
}
